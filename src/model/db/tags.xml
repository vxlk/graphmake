<!-- Currently assumes Cmake 3.10 -->
<!--
   {props}={editable,has_children,link=https://cmake.org/cmake/help/v3.20/command/cmake_host_system_information.html}
-->
<!-- Contains a list of global variables for the various global functions of cmake -->
<global_vars>
   <editable_vars>
      <basic_var
         GENERIC_VAR="Variable1"
      />
   </editable_vars>

   <keys>
      <host_system_information
         num_cores="NUMER_OF_LOGICAL_CORES"
         num_physical_cores="NUMBER_OF_PHYSICAL_CORES"
         hostname="HOSTNAME"
         fqdn="FQDN"
         total_virtual_memory="TOTAL_VIRTUAL_MEMORY"
         available_virtual_memory="AVAILABLE_VIRTUAL_MEMORY"
         total_physical_memory="TOTAL_PHYSICAL_MEMORY"
         available_physical_memory="AVAILABLE_PHYSICAL_MEMORY"
      />
      <host_system_information_3.10
         is_64_bit="IS_64BIT"
         has_fpu="HAS_FPU"
         has_mmx="HAS_MMX"
         has_mmx_plus="HAS_MMX_PLUS"
         has_sse="HAS_SSE"
         has_sse2="HAS_SSE2"
         has_sse_fp="HAS_SSE_FP"
         HAS_SSE-MMX="HAS_SSE_MMX"
         HAS_AMD_3DNOW="HAS_AMD_3DNOW"
         HAS_AMD_3DNOW_PLUS="HAS_AMD_3DNOW_PLUS"
         HAS_IA64="HAS_IA64"
         HAS_SERIAL_NUMBER="HAS_SERIAL_NUMBER"
         PROCESSOR_SERIAL_NUMBER="PROCESSOR_SERIAL_NUMBER"
         PROCESSOR_NAME="PROCESSOR_NAME"
         PROCESSOR_DESCRIPTION="PROCESSOR_DESCRIPTION"
         OS_NAME="OS_NAME"
         OS_RELEASE="OS_RELEASE"
         OS_VERSION="OS_VERSION"
         OS_PLATFORM="OS_PLATFORM"
      />
   </keys>
<!-- Applies to the set(x,y) function - this is x -->
   <global_set>
      <CXX
         CMAKE_CXX_SET="CMAKE_CXX_STANDARD"
      />
   </global_set>
   <!-- Applies to the set(x,y) function - this is y -->
   <global_set_var>
      <CXX
         CMAKE_CXX_STANDARD98="98"
         CMAKE_CXX_STANDARD11="11"
         CMAKE_CXX_STANDARD17="17" 
         CMAKE_CXX_STANDARD20="20"
      />
   </global_set_var>
   <!-- Cmake versions available (these need to be installed on your pc) -->
   <cmake_version
      cmake_version_number="3.15"
   />
</global_vars>
